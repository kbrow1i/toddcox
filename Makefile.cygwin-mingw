CXX = i686-pc-mingw32-g++ -static
CC = i686-pc-mingw32-g++ -static
STRIP = i686-pc-mingw32-strip
PLATFORM = windows
BIN = bin/$(PLATFORM)
VERSION = 0.4

.PHONY: all clean install pkg

all: toddcox

toddcox: toddcox.o coset.o cosettable.o gens_and_words.o stack.o equivreln.o tc.o

toddcox.o: toddcox.cc cosettable.h gens_and_words.h coset.h equivreln.h tc.h

coset.o: coset.cc coset.h gens_and_words.h

cosettable.o: cosettable.cc cosettable.h gens_and_words.h coset.h stack.h equivreln.h

stack.o: stack.cc stack.h

gens_and_words.o: gens_and_words.cc gens_and_words.h

equivreln.o: equivreln.cc equivreln.h

tc.o: tc.cc tc.h cosettable.h gens_and_words.h coset.h stack.h equivreln.h

clean:
	-rm -f *.o *.exe toddcox

install:
	mkdir -p $(BIN)
	cp toddcox $(BIN)
	$(STRIP) $(BIN)/toddcox

# The following is for maintainer use only.
pkg:
	cp -p $(BIN)/toddcox ../releases/toddcox-$(VERSION).$(PLATFORM)
	mkdir -p ~/html/toddcox/$(BIN)
	chmod 755 ~/html/toddcox/$(BIN)
	cp -p $(BIN)/toddcox ~/html/toddcox/$(BIN)
